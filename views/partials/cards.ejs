<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">




<body>

  <% const currentDate = new Date(); %>
  <% const formattedDate = currentDate.toLocaleString('en-US', { month: 'long', day: 'numeric' }); %>
  
  
  <% if (locals.posts && locals.posts.length > 0) { %>
      <% locals.posts.forEach((post, index) => { %>
          <div class="col-lg-12 " id="posts">
              <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative mx-4">
                  <div class="col p-4 d-flex flex-column position-static">
                      <h3 class="mb-0"><%= post.title %></h3>
                      <div class="mb-1 text-body-secondary"> <%= formattedDate %> </div>
                      
                      <div class="container mx-0 px-0">
                        <a href="/blog-post?title=<%= post.title %>&content=<%= post.content%>"  >
                            <button class="d-inline-flex align-items-center btn btn-primary btn-lg px-4 text-center mx-0" type="button" action="goToPost" method="post">
                                Go to Post
                            </button> 
                        </a>
                          <a href="/delete-post/<%= index %>">
                          <button class="btn btn-outline-secondary btn-lg px-4 text-center mx-0" type="button" action="delete-post" method="Delete">
                            Delete Post
                          </button>
                            </a>

                      </div>
                      
                  </div>
                  
                 <!-- <div class="col-auto d-none d-lg-block">
                      <svg class="bd-placeholder-img" width="200" height="250" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                          <title>Placeholder</title>
                          <rect width="100%" height="100%" fill="#55595c"></rect>
                          <text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text>
                      </svg>
                  </div>  -->
                  
              </div>
          </div>
      <% }); %>
  <% } else { %>
      
  <% } %>
  
  </body>
